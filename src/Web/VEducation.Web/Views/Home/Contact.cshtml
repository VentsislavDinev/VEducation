@model VEducation.Data.ViewModels.Pages.HomePageViewModel
<!---->
<!--// mian-content -->
<!-- banner -->
<section class="ab-info-main py-md-5 py-4">
    <div class="container py-md-5 py-4">
        <h3 class="tittle text-center mb-lg-5 mb-3"><span class="sub-tittle">Find Us</span> Contact Us</h3>
        <div class="row contact-main-info">
            <div class="col-md-7 contact-right">
                @Html.Action("Message")
                
            </div>
            @foreach (var item in Model.Contact)
            {
                <div class="col-md-5 contact-left">
                    <div class="address">
                        <h5>Address:</h5>
                        <p>
                            <span class="fa fa-home"></span>@item.Address, @item.City, @item.OfficeCountry
                        </p>
                    </div>
                    <div class="address address-mdl">
                        <h5>Phones:</h5>
                        <p><span class="fa fa-mobile"></span>@item.Phonenumber</p>
                    </div>
                    <div class="address">
                        <h5>Email:</h5>
                        <p><span class="fa fa-envelope"></span> <a href="@item.Email">@item.Email</a></p>
                    </div>
                </div>
            }

        </div>


    </div>
</section>
<section class="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d423286.27404345275!2d-118.69191921441556!3d34.02016130939095!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c2c75ddc27da13%3A0xe22fdf6f254608f4!2sLos+Angeles%2C+CA%2C+USA!5e0!3m2!1sen!2sin!4v1522474296007" allowfullscreen></iframe>
</section>
