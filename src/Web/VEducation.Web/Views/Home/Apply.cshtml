@model VEducation.Data.ViewModels.Pages.HomePageViewModel
@using (Html.BeginForm("Apply", "Home", FormMethod.Post))
{
    <section class="apply-main py-5" id="apply">
        <div class="container">
            <div class="row py-lg-5">
                <div class="col-lg-7 apply-info px-lg-5">

                    @Html.AntiForgeryToken()
                </div>
                <div class="login p-md-5 p-4 mx-auto bg-white mw-100 col-lg-5">
                    <h5 class="text-center mb-4">Apply Now</h5>
                    <div class="form-group">
                        <label>First name</label>
                        @Html.EditorFor(model => model.Apply.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "description" } })
                    </div>
                    <div class="form-group">
                        <label>Last name</label>
                        @Html.EditorFor(model => model.Apply.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "description" } })
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.EditorFor(model => model.Apply.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "description" } })
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.EditorFor(model => model.Apply.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "description" } })

                    </div>

                    <div class="form-group mb-4">
                        <label class="mb-2">Password</label>
                        @Html.EditorFor(model => model.Apply.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "description" } })

                    </div>

                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>


                </div>
            </div>
        </div>
    </section>
}