@model VEducation.Data.ViewModels.Pages.HomePageViewModel 

<!-- testimonials -->
<section class="testimonials py-5" id="testi">
    <div class="container py-xl-5 py-lg-3">
        <h3 class="tittle text-center mb-lg-5 mb-3"><span class="sub-tittle">See what people are saying</span> Testimonials</h3>
        <div class="row">

            <div class="col-lg-6 testimonials_grid">
                @for (var i = 0; i < Model.Feedback.Count(); i++)
                {
                    var service = Model.Feedback.ElementAt(i);

                <div class="bg-white rounded p-lg-5 p-3">


                    <div class="row mt-4">
                        <div class="col-3 testi-img-res">
                            <img src="images/@service.CompanyLogos" alt=" " class="img-fluid" />
                        </div>
                        <div class="col-9 testi_grid mt-xl-3 mt-lg-2 mt-md-4 mt-2">
                            <h5 class="mb-2">@service.CompanyName</h5>
                            <p>@service.Description</p>
                        </div>
                    </div>
                   </div>

                    if (i > 0 && (i + 1) % 3 == 0)
                    {
                        @:</div>
                        @: <div class="col-lg-6 testimonials_grid">
                    }
                }
            </div>
        </div>

    </div>
</section>
