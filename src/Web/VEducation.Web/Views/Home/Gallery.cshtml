@model VEducation.Data.ViewModels.Pages.HomePageViewModel 

<section class="py-lg-5 portfolio-flyer py-4" id="gallery">
    <div class="container py-lg-5">
        <h3 class="tittle text-center my-lg-5 my-3"><span class="sub-tittle"> Recent Pics </span>Our Gallery</h3>

        <div class="row news-grids pb-lg-5 mt-3 text-center">

            <div class="col-md-4 gal-img mt-lg-4">
                @for (var i = 0; i < Model.Gallery.Count(); i++)
                {
                    var service = Model.Gallery.ElementAt(i);

                    <a href="#gal9"><img src="images/@service.FilePath" alt="High Edu" class="img-fluid"></a>

                    if (i > 0 && (i + 1) % 3 == 0)
                    {
                    @:</div>
                    @: <div class="col-md-4 gal-img mt-lg-4">
                    }
                }

            </div>
        </div>
    </div>
</section>
