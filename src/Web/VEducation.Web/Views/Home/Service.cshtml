@model  VEducation.Data.ViewModels.Pages.HomePageViewModel

<h3 class="tittle text-center mb-lg-5 mb-3"><span class="sub-tittle">About.</span> Our awesome course categories</h3>
<div class="feature-grids row mb-lg-5 my-3">

    <div class="col-md-4 p-0">

        @for (var i = 0; i < Model.Service.Count(); i++)
        {



            var service = Model.Service.ElementAt(i);
           
            <div class="col-md-3">
                <h4 class="my-3">@service.Name</h4>
                <p> @service.Description </p>
            </div>
            if (i > 0 && (i + 1) % 3 == 0)
            {
            @:</div>
            @: <div class="col-md-4 p-0">
            }
        }

        <div class="clearfix"> </div>
    </div>

</div>