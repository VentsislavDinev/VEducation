@model VEducation.Data.ViewModels.Pages.HomePageViewModel 

<section class="banner-bottom py-lg-5 py-4">
    <div class="container">
        <div class="inner-sec-w3ls py-lg-5 py-4">
            <h3 class="tittle text-center my-lg-5 my-3"><span class="sub-tittle">Amazing People</span> Our Great Professors</h3>
            <div class="row mt-lg-5 mt-4">
                <div class="col-md-4 team-gd text-center">
                    @for (var i = 0; i < Model.Team.Count(); i++)
                    {
                        var service = Model.Team.ElementAt(i);

                        <div class="team-img mb-4">
                            <img src="images/@service.FilePath" class="img-fluid rounded-circle" alt="user-image">
                        </div>
                        <div class="team-info">
                            <h3 class="mt-md-4 mt-3"><span class="sub-tittle-team">@service.Position</span> @service.FirstName @service.LastName</h3>
                            <p>@service.Description </p>
                         
                        </div>

                        if (i > 0 && (i + 1) % 3 == 0)
                        {
                            @:</div>
                            @:<div class="col-md-4 team-gd text-center">
                        }
                    }


                </div>

            </div>
    </div>
</section>